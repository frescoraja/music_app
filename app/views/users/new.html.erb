<center>
<h1>Sign Up</h1>

<form action="<%= users_url %>" method="post">
  <%= auth_token_input %>
  <hr>
  <label for="user-email">Email:</label>
    <input type="text"
           name="user[email]"
           id="user-email"
           value="<%= @user.email %>"
           placeholder="user@domain.com">

  <label for="user-password">Password:</label>
    <input type="password"
           name="user[password]"
           id="user-password"
           value=""
           placeholder="Password">
  <input type="submit" value="Sign Up">
</form>
<hr>
</center>
